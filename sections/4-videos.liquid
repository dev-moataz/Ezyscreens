
<style>
  .diy-gallery-section {
    text-align: center;
    padding: 80px 0px 80px;
    background-color: #fff;
  }

  .diy-gallery-section .diy-handle {
    color: #198A28;
    margin-bottom: 5px;
    font-weight: bold;
  }
  .diy-gallery-section .button{
    margin-top: 20px;
  }

  .diy-gallery-section .diy-heading {
    margin-bottom: 30px;
  }

  .diy-gallery-section .image-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns, 4), 1fr);
    gap: 20px 10px;
    justify-items: center;
  }

  .diy-gallery-section .image-grid.columns-2 {
    --columns: 2;
  }

  .diy-gallery-section .image-grid.columns-3 {
    --columns: 3;
  }

  .diy-gallery-section .image-grid.columns-4 {
    --columns: 4;
  }

  .diy-gallery-section .video-wrapper {
    width: 100%;
    overflow: hidden;
    border-radius: 10px;
    position: relative;
    background: #F5F7FA;
  }



  .diy-gallery-section  .video-wrapper iframe {
    width: 100%;
    height: auto;
    object-fit: cover;
    aspect-ratio: 16 / 11;
  }
  .diy-gallery-section .h-video{
    font-weight: bold;
    font-size: 15px;
    padding:  10px;
    max-width: 370px;
    line-height: 1.5;
    margin: 0 auto;
  }

@media screen and (max-width: 749px) {
  .diy-gallery-section{
    padding: 48px 0 48px;
  }
  
  .diy-gallery-section .image-grid {
    grid-template-columns: 1fr;
  }
  
  .diy-gallery-section .image-grid.columns-2,
  .diy-gallery-section .image-grid.columns-3,
  .diy-gallery-section .image-grid.columns-4 {
    --columns: 1;
  }
}
</style>
<section class="diy-gallery-section" id="diy-videos">
  <div class="page-width page-width--wide"> 
    <div class="diy-container">
      {% if section.settings.caption %}
        <p class="diy-handle tagline">{{ section.settings.caption }}</p>
      {% endif %}

      {% if section.settings.heading %}
        <h2 class="diy-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      <div class="image-grid columns-{{ section.settings.number_of_columns | default: 4 }}">
        {% for block in section.blocks %}
          {%if block.type == 'video'%}
            <div class="video-wrapper">
              {% comment %} <span class="count">{{forloop.index}}</span> {% endcomment %}
              <iframe width="100%" src="{{block.settings.video_url}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
              <p class="h-video no-margin">{{block.settings.video_heading}}</p>
            </div>
          {%endif%}
        {% endfor %}
      </div>
      {%- if section.settings.link_label != blank -%}
      <a href="{{ section.settings.link }}"  target="_blank" class="button">
        {{section.settings.link_label | escape}}
      </a>
      {%- endif -%}
    </div>
  </div>

</section>

{% schema %}
  {
    "name": "Diy installation",
    "settings": [
		{
          "type": "header",
          "content": "heading"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "add a tagline",
      "default": "Internally recorded videos"
    },
		{
          "type": "text",
          "id": "heading",
          "label": "Header",
          "default": "diy installation videos"
		},
    {
      "type": "select",
      "id": "number_of_columns",
      "label": "Number of columns",
      "options": [
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        },
        {
          "value": "4",
          "label": "4 columns"
        }
      ],
      "default": "4"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "t:sections.multicolumn.blocks.column.settings.link_label.label",
      "info": "t:sections.multicolumn.blocks.column.settings.link_label.info"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.multicolumn.blocks.column.settings.link.label"
    }

	],
  "max_blocks": 6,
  "blocks": [
      {
        "type": "video",
      	"name": "Diy Video",
        "settings": [
          {
            "type": "header",
            "content": "Diy installation - video"
          },
          {
            "id": "video_heading",
            "type": "text",
            "label": "Video heading "
          },
		      {	
            "id": "video_url",
            "type": "url",
            "label": "Video url"
          }
        ]
      }
    ],
    "presets": [
    {
      "name": "DIY VIDEOS",
      "category": "Social"
    }
  ]
  }
{% endschema %}

