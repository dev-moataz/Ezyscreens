  <style>
    .diy-fly-screens-section {
      font-family: sans-serif;
      padding: 20px 00px;
      color: #fff;
    }

    .manuals-section {
      text-align: center;
      padding-bottom: 40px;
    }

    .section-subheading {
      color: #198A28;
      font-weight: bold;
      margin-bottom: 8px;
    }

    .manuals-section .section-heading {
      margin-bottom: 50px;
    }

    .manuals-grid {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
      margin-bottom: -200px;
    }

    .manual-card {
      overflow: hidden;
      max-width: calc((100% - 2* 20px )/ 3);
      text-align: center;
      position: relative;
    }

    .manual-card img {
      width: 100%;
      height: auto;
      aspect-ratio: 1/1;
      display: block;
    }
    .manual-image-wrapper{
      position: relative;
      background: #ffffff;
      border: 2px solid #191A24;
      border-radius: 10px;
    overflow: hidden;
    }

    .manual-card .active-image{
      transition: opacity 0.3s ease;

    }
    .manual-card .hover-image{
      opacity: 0;
      position: absolute;
      left: 0;
      top: 0;
      transition: opacity 0.2s ease;
    }
    .manual-card:hover .hover-image{
      opacity: 1;
    }
    .manual-card:hover .active-image{
      opacity: 0;
    }
    .manual-title {
    font-size: 28px;
    }
    .card-content{

      position: absolute;
      top: calc(50% + 20px);
      transform: translateY(-50%);
      width: 100%;
      font-weight: bold;
      color: #ffffff;
      padding: 10px 0;
    }
    .card-btn{
      opacity: 0;
      height: 0; 
      transition: opacity 0.3s ease,  min-height 0.35s ease;
      min-height: 0;
      margin-top: 20px;
    }
    .manual-card:hover .card-btn{
      height: 100%;
      opacity: 1;
      min-height: 50px;
    }

    .measurement-section {
      padding-top: 240px;
      padding-bottom: 60px;
      text-align: center;
      background: #191A24;
      color: #ffffff;
    }
    .measurement-section .section-heading,
    .measurement-section  .info-card  h4{
      color: #ffffff;

    }
    .measurement-section  .section-subheading{
      color: #5082A7;
    }
    .measurements-container{
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }
    .measurements-head {
        flex: 1;
        max-width: calc((100% - 2* 20px )/ 3);
        min-width: 30%;
        text-align: left;
      }
    .measurement-section .button--small {
      background-color: #5082A7;
      color: #fff;
    }
    .measurement-section .button--small::after{
 box-shadow:  0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(var(--color-button-text),var(--border-opacity)),0 0 0 var(--buttons-border-width)
  rgba(80, 130, 167,var(--alpha-button-background))
} 
.measurement-section .button--small:hover:after{
  box-shadow:  0 0 0 calc(var(--buttons-border-width) + var(--border-offset)) rgba(var(--color-button-text),var(--border-opacity)),0 0 0 calc(var(--buttons-border-width) + 1px) rgba(80, 130 ,167,var(--alpha-button-background))
}
    .info-card {
      background-color: #383C54;
      padding: 20px;
      border-radius: 10px;
        flex: 1;
        max-width: calc((100% - 2* 20px )/ 3);
      text-align: left;
    }

    .info-number {
    background-color: #5082A7;
    color: #ffffff;
    font-weight: bold;
    border-radius: 50%;
    width: 21px;
    height: 21px;
    display: inline-block;
    text-align: center;
    font-size: 14px;
    line-height: 21px;
    }

    .info-card h3 {
      margin-block: 15px;
      color: #ffffff;
    }

    .info-card p { 
      line-height: 1.3;
    }
    
/* mobile */
@media screen and (max-width: 749px) {
  .manuals-grid, .measurements-container{
    flex-wrap: wrap;
        flex-direction: column;

  }
  .manual-card, .measurements-head, .info-card{
    width: 100%;
    max-width: 100%;
  }
  .manuals-section .section-heading {
    margin-bottom: 30px;
  }
  .manuals-grid{

    margin-bottom: -550px;
  }
  .measurement-section {
    padding-top: 580px;
  }
  .measurement-section .button--small{
    
    margin-inline: inherit;
    margin-top: 10px;
  }
  .diy-fly-screens-section{
    padding-bottom: 0;
  }
}
  </style>

<section class="diy-fly-screens-section"  id="diy-manuals">
  <div class="manuals-section">
    <div class="page-width">
        <p class="section-subheading tagline">{{ section.settings.manuals_heading | escape }}</p>
      <h2 class="section-heading">{{ section.settings.manuals_title | escape }}</h2>
      <div class="manuals-grid">
        <div class="manual-card">
          <a href="{{section.settings.manual_url1}}" target="_blank" class="full-unstyled-link">
            <div class="manual-image-wrapper">
              {% if section.settings.image1 %}
                <img class="active-image" src="{{ section.settings.image1 | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
              {% if section.settings.image1h %}
                <img class="hover-image" src="{{ section.settings.image1h | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
            </div>
            <div class="card-content">
              <div class="manual-title">Single Door</div>
              <a href="{{section.settings.manual_url1}}" class="card-btn button button--primary">VIEW FULL MANUAL</a>
            </div>

          </a>
        </div>
        <div class="manual-card">
          <a href="{{section.settings.manual_url2}}" target="_blank" class="full-unstyled-link">
            <div class="manual-image-wrapper">
              {% if section.settings.image2 %}
                <img class="active-image" src="{{ section.settings.image2 | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
              {% if section.settings.image2h %}
                <img class="hover-image" src="{{ section.settings.image2h | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
            </div>
            <div class="card-content">
              <div class="manual-title">Double Door</div>
              <a href="{{section.settings.manual_url2}}" class="card-btn button button--primary">VIEW FULL MANUAL</a>
            </div>
          </a>
        </div>
        <div class="manual-card">
          <a href="{{section.settings.manual_url1}}" target="_blank" class="full-unstyled-link">
            <div class="manual-image-wrapper">
              {% if section.settings.image3 %}
                <img class="active-image" src="{{ section.settings.image3 | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
              {% if section.settings.image3h %}
                <img class="hover-image" src="{{ section.settings.image3h | image_url: width: 600 }}" alt="Single Door">
              {% endif %}
            </div>
            <div class="card-content">
              <div class="manual-title">Window Screen</div>
              <a href="{{section.settings.manual_url3}}" class="card-btn button button--primary">VIEW FULL MANUAL</a>
            </div>
            
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="measurement-section">
    <div class="page-width">
      <div class="measurements-container">
        <div class="measurements-head">
          <p class="section-subheading tagline">{{ section.settings.measurement_heading | escape }}</p>
          <h2 class="section-heading">{{ section.settings.measurement_title | escape }}</h2>
          {% if section.settings.button_text and section.settings.button_link %}
            <a href="{{ section.settings.button_link }}" class="button button--primary  button--small hide-mobile">{{ section.settings.button_text }}</a>
          {% endif %}     
        </div>


          <div class="info-card">
            <div class="info-number">1</div>
            <h3>{{ section.settings.card1_title | escape }}</h3>
            <p class="no-margin">{{ section.settings.card1_text | escape }}</p>
          </div>
          <div class="info-card">
            <div class="info-number">2</div>
            <h3>{{ section.settings.card2_title | escape }}</h3>
            <p class="no-margin">{{ section.settings.card2_text | escape }}</p>
          </div>

          {% if section.settings.button_text and section.settings.button_link %}
            <a href="{{ section.settings.button_link }}" class="button button--primary  button--small hide-desktop silder-mob-button">{{ section.settings.button_text }}</a>
          {% endif %}
      </div>

    </div>
  </div>
</section>

