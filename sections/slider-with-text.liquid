<script>
(function() {
  function initSliders() {
    if (typeof Swiper === 'undefined') {
      // Retry if Swiper isn't loaded yet
      setTimeout(initSliders, 100);
      return;
    }

    const section = document.querySelector('.image-with-text--slider');
    if (!section) return;

    const desktopSliderDownEl = section.querySelector('.swiper-desktop-vertical-down');
    const desktopSliderUpEl = section.querySelector('.swiper-desktop-vertical-up');
    const mobileSliderRightEl = section.querySelector('.swiper-mobile-horizontal-right');
    const mobileSliderLeftEl = section.querySelector('.swiper-mobile-horizontal-left');
    const textItem = section.querySelector('.image-with-text__text-item');
    const mediaItem = section.querySelector('.image-with-text__media-item');

    // Initialize Desktop Vertical Slider 1 - Navigates Down (slidesPerView will be calculated dynamically)
    let desktopSwiperDown = null;
    if (desktopSliderDownEl) {
      desktopSwiperDown = new Swiper('.swiper-desktop-vertical-down', {
        direction: 'vertical',
        slidesPerView: 2, // Initial value, will be updated dynamically
        spaceBetween: 0,
        loop: true,
        loopAdditionalSlides: 1,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },
        autoHeight: false,
        on: {
          init: function() {
            // Set up Intersection Observer to detect when last slide becomes visible
            const swiper = this;
            const slides = swiper.slides;
            const realSlides = slides.filter(slide => {
              return slide.classList.contains('swiper-slide') && 
                     !slide.classList.contains('swiper-slide-duplicate');
            });
            
            if (realSlides.length > 0) {
              const lastRealSlide = realSlides[realSlides.length - 1];
              
              const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                  if (entry.isIntersecting && entry.intersectionRatio > 0) {
                    // Last slide is visible, loop immediately
                    if (!swiper.loopTriggered) {
                      swiper.loopTriggered = true;
                      // Stop autoplay temporarily to prevent conflicts
                      if (swiper.autoplay && swiper.autoplay.running) {
                        swiper.autoplay.stop();
                      }
                      setTimeout(() => {
                        swiper.slideToLoop(0, 0, false);
                        // Restart autoplay after a short delay
                        setTimeout(() => {
                          if (swiper.autoplay) {
                            swiper.autoplay.start();
                          }
                          swiper.loopTriggered = false;
                        }, 50);
                      }, 100);
                    }
                  }
                });
              }, {
                threshold: 0.1 // Trigger when 10% of slide is visible
              });
              
              observer.observe(lastRealSlide);
              swiper.lastSlideObserver = observer;
            }
          },
          reachEnd: function() {
            // Immediately loop when reaching the end
            if (!this.loopTriggered) {
              this.loopTriggered = true;
              // Stop autoplay temporarily to prevent conflicts
              if (this.autoplay && this.autoplay.running) {
                this.autoplay.stop();
              }
              setTimeout(() => {
                this.slideToLoop(0, 0, false);
                // Restart autoplay after a short delay
                setTimeout(() => {
                  if (this.autoplay) {
                    this.autoplay.start();
                  }
                  this.loopTriggered = false;
                }, 50);
              }, 0);
            }
          },
          slideChangeTransitionEnd: function() {
            // Ensure autoplay continues after slide change
            if (this.autoplay) {
              if (!this.autoplay.running) {
                this.autoplay.start();
              }
            }
          },
          slideChange: function() {
            // Ensure autoplay is running after any slide change
            if (this.autoplay && !this.autoplay.running && !this.loopTriggered) {
              setTimeout(() => {
                if (this.autoplay && !this.autoplay.running) {
                  this.autoplay.start();
                }
              }, 100);
            }
          }
        }
      });
    }

    // Initialize Desktop Vertical Slider 2 - Navigates Up (reverse direction)
    let desktopSwiperUp = null;
    if (desktopSliderUpEl) {
      desktopSwiperUp = new Swiper('.swiper-desktop-vertical-up', {
        direction: 'vertical',
        slidesPerView: 2, // Initial value, will be updated dynamically
        spaceBetween: 0,
        reverseDirection: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
          reverseDirection: true,
        },
        autoHeight: false,
      });
    }

    // Sync height with text item - dynamically calculate slidesPerView based on available space
    if (textItem && mediaItem && (desktopSliderDownEl || desktopSliderUpEl)) {
      const updateSliderHeights = () => {
        const textHeight = textItem.getBoundingClientRect().height;
        
        // Function to calculate how many slides can fit
        const calculateSlidesPerView = (sliderEl) => {
          if (!sliderEl) return 2;
          
          const sliderWidth = sliderEl.getBoundingClientRect().width;
          if (sliderWidth <= 0) return 2;
          
          const slides = sliderEl.querySelectorAll('.swiper-slide');
          if (slides.length === 0) return 2;
          
          let totalHeight = 0;
          let visibleCount = 0;
          
          for (let i = 0; i < slides.length; i++) {
            const slide = slides[i];
            const img = slide.querySelector('img');
            
            if (img && img.complete && img.naturalWidth > 0 && img.naturalHeight > 0) {
              const aspectRatio = img.naturalHeight / img.naturalWidth;
              const slideHeight = sliderWidth * aspectRatio;
              
              if (totalHeight + slideHeight <= textHeight) {
                totalHeight += slideHeight;
                visibleCount++;
              } else {
                break;
              }
            } else {
              // If image not loaded, estimate based on average
              visibleCount++;
            }
          }
          
          return Math.max(1, visibleCount);
        };
        
        // Set max-height on sliders and media item container
        if (desktopSliderDownEl) {
          desktopSliderDownEl.style.maxHeight = `${textHeight}px`;
          const slidesPerView = calculateSlidesPerView(desktopSliderDownEl);
          
          if (desktopSwiperDown) {
            const needsUpdate = desktopSwiperDown.params.slidesPerView !== slidesPerView;
            
            if (needsUpdate) {
              desktopSwiperDown.params.slidesPerView = slidesPerView;
              desktopSwiperDown.update();
              desktopSwiperDown.updateSlides();
              desktopSwiperDown.updateSlidesClasses();
            }
          }
        }
        if (desktopSliderUpEl) {
          desktopSliderUpEl.style.maxHeight = `${textHeight}px`;
          const slidesPerView = calculateSlidesPerView(desktopSliderUpEl);
          
          if (desktopSwiperUp) {
            const needsUpdate = desktopSwiperUp.params.slidesPerView !== slidesPerView;
            
            if (needsUpdate) {
              desktopSwiperUp.params.slidesPerView = slidesPerView;
              desktopSwiperUp.update();
              desktopSwiperUp.updateSlides();
              desktopSwiperUp.updateSlidesClasses();
            }
          }
        }
        
        mediaItem.style.maxHeight = `${textHeight}px`;
      };

      // Wait for images to load before calculating heights
      const images = section.querySelectorAll('.swiper-slide img');
      let imagesLoaded = 0;
      const totalImages = images.length;
      
      const checkAndUpdate = () => {
        if (imagesLoaded === totalImages || totalImages === 0) {
          // Ensure all slides have auto height
          const allSlides = section.querySelectorAll('.swiper-slide');
          allSlides.forEach(slide => {
            slide.style.height = 'auto';
          });
          updateSliderHeights();
        }
      };
      
      // Initial call
      setTimeout(() => {
        const allSlides = section.querySelectorAll('.swiper-slide');
        allSlides.forEach(slide => {
          slide.style.height = 'auto';
        });
        updateSliderHeights();
        
      }, 100);
      
      if (totalImages === 0) {
        checkAndUpdate();
      } else {
        images.forEach(img => {
          if (img.complete && img.naturalWidth > 0) {
            imagesLoaded++;
            checkAndUpdate();
          } else {
            img.addEventListener('load', () => {
              imagesLoaded++;
              checkAndUpdate();
            });
            img.addEventListener('error', () => {
              imagesLoaded++;
              checkAndUpdate();
            });
          }
        });
      }

      // Update on window resize
      window.addEventListener('resize', updateSliderHeights);

      // Watch text for dynamic changes
      if (typeof ResizeObserver !== 'undefined') {
        const resizeObserver = new ResizeObserver(updateSliderHeights);
        resizeObserver.observe(textItem);
      }
    }

    // Initialize Mobile Horizontal Slider 1 - Navigates Right
    if (mobileSliderRightEl) {
      new Swiper('.swiper-mobile-horizontal-right', {
        direction: 'horizontal',
        slidesPerView: 2,
        spaceBetween: 0,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },
      });
    }

    // Initialize Mobile Horizontal Slider 2 - Navigates Left (reverse direction)
    if (mobileSliderLeftEl) {
      new Swiper('.swiper-mobile-horizontal-left', {
        direction: 'horizontal',
        slidesPerView: 2,
        spaceBetween: 0,
        reverseDirection: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
          reverseDirection: true,
        },
      });
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSliders);
  } else {
    initSliders();
  }
})();
</script>


