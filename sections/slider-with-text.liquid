{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="">
    <div class="image-with-text image-with-text--slider image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == section.settings.section_color_scheme and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}35-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
        <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">

            <!-- Desktop Vertical Slider 1 - Navigates Down (visible on desktop only) -->
            <div class="swiper swiper-desktop-vertical swiper-desktop-vertical-down" style="height: 100%; width: 100%;">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'slider_1_image' -%}
                    <div class="swiper-slide" {{ block.shopify_attributes }}>
                      <div class="slider-image-container">
                        {%- if block.settings.image != blank -%}
                          {{
                            block.settings.image
                            | image_url: width: 1500
                            | image_tag: loading: 'lazy', sizes: '50vw', widths: '375, 550, 750, 1100, 1500'
                          }}
                        {%- else -%}
                          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                      </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>

            <!-- Desktop Vertical Slider 2 - Navigates Up (visible on desktop only) -->
            <div class="swiper swiper-desktop-vertical swiper-desktop-vertical-up" style="height: 100%; width: 100%;">
              <div class="swiper-wrapper">
                {%- assign slider_2_blocks = section.blocks | where: 'type', 'slider_2_image' -%}
                {%- for block in slider_2_blocks reversed -%}
                  <div class="swiper-slide" {{ block.shopify_attributes }}>
                    <div class="slider-image-container">
                      {%- if block.settings.image != blank -%}
                        {{
                          block.settings.image
                          | image_url: width: 1500
                          | image_tag: loading: 'lazy', sizes: '50vw', widths: '375, 550, 750, 1100, 1500'
                        }}
                      {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            </div>

            <!-- Mobile Horizontal Slider 1 - Navigates Right (visible on mobile only) -->
            <div class="swiper swiper-mobile-horizontal swiper-mobile-horizontal-right" style="height: 100%; width: 100%;">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                  {%- if block.type == 'slider_1_image' -%}
                    <div class="swiper-slide" {{ block.shopify_attributes }}>
                      <div class="slider-image-container">
                        {%- if block.settings.image != blank -%}
                          {{
                            block.settings.image
                            | image_url: width: 1500
                            | image_tag: loading: 'lazy', sizes: '50vw', widths: '375, 550, 750, 1100, 1500'
                          }}
                        {%- else -%}
                          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                      </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>

            <!-- Mobile Horizontal Slider 2 - Navigates Left (visible on mobile only) -->
            <div class="swiper swiper-mobile-horizontal swiper-mobile-horizontal-left" style="height: 100%; width: 100%;">
              <div class="swiper-wrapper">
                {%- assign slider_2_blocks = section.blocks | where: 'type', 'slider_2_image' -%}
                {%- for block in slider_2_blocks reversed -%}
                  <div class="swiper-slide" {{ block.shopify_attributes }}>
                    <div class="slider-image-container">
                      {%- if block.settings.image != blank -%}
                        {{
                          block.settings.image
                          | image_url: width: 1500
                          | image_tag: loading: 'lazy', sizes: '50vw', widths: '375, 550, 750, 1100, 1500'
                        }}
                      {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            </div>
          </div>

        <div class="image-with-text__text-item grid__item page-width">
          <div
            id="ImageWithText--{{ section.id }}"
            class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} content-container{% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {%- assign previous_block_index = forloop.index0 | minus: 1 -%}
              {%- assign previous_block = section.blocks[previous_block_index] -%}
              {%- assign next_block = section.blocks[forloop.index] -%}

              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'caption' -%}
                  <p
                    class="image-with-text__text tagline image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                    style="color: {{block.settings.color}}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                {%- when 'text-box' -%}
                  {%- if previous_block.type != 'text-box' and next_block.type == 'text-box' -%}
                    <div class="image-with-text__text-box-container">
                  {%- endif -%}
                    <div class="image-with-text__text-box rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                      <h4>{{ block.settings.heading }}</h4>
                      <p class="text-box-grayed no-margin">{{ block.settings.text }}</p>
                    </div>

                {%- if forloop.last or previous_block.type == 'text-box' and next_block.type != 'text-box' -%}
                  </div>
                {%- endif -%}
                {%- when 'button' -%}
                  {%- if block.settings.button_label_22 != blank -%}
                    <div class="banner__buttons banner__buttons--multiple">
                  {%- endif -%}

                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}

                  {%- if block.settings.button_label_22 != blank -%}
                    <a
                      {% if block.settings.button_link_2 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_2 }}"
                      {% endif %}
                      class="button button--blue {% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label_22 | escape }}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_22 != blank -%}
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

