
<style>
  .upgrade-home-section {
    text-align: center;
    padding: 60px 0px;
  }
  .upgrade-home-section .subheading {
    max-width: 600px;
    margin: 0 auto 40px;
  }

  .upgrade-home-section .features {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 40px;
  }

  .upgrade-home-section .feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 300px;
  }

  .upgrade-home-section .icon {
    height: 40px;
    width: auto;
    margin-bottom: 10px;
  }
  
/* mobile */
@media screen and (max-width: 749px) {
  
  .upgrade-home-section {
    padding: 40px 0 20px;
  }
  .upgrade-home-section .features {
    gap: 20px;
    margin-bottom: 20px;
  }
}
</style>
<section class="upgrade-home-section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <h2 class="heading">{{ section.settings.heading }}</h2>
    <p class="subheading">{{ section.settings.subheading }}</p>

    <div class="features">
      {% for block in section.blocks %}
        <div class="feature">
          <img src="{{ block.settings.icon | image_url: width: 64 }}" alt="Icon" class="icon">
          <p class="feature-text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Upgrade Home",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Upgrade Your Home Today"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Transform your home with our reliable and stylish solutions. Get in touch with us now to find the perfect fit for your needs!"
    },    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "OUR PRODUCTS"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature Text"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Upgrade Home Default",
      "category": "Custom",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "Fast Turn Around"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Easy 30 Days Return"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Australia Wide Shipping"
          }
        }
      ]
    }
  ]
}
{% endschema %}
